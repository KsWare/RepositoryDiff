<UserControl x:Class="KsWare.RepositoryDiff.UI.Filter.ResultFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KsWare.RepositoryDiff.UI.Filter"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local:ResultFilterViewModel, IsDesignTimeCreatable=False}"
             >
    <StackPanel Orientation="Horizontal">
            <CheckBox Content="Unchanged" IsChecked="{Binding Unchanged}"/>
            <CheckBox Content="Changed"   IsChecked="{Binding Changed}"  Margin="16 0 0 0"/>
            <CheckBox Content="Deleted"   IsChecked="{Binding Deleted}" Margin="16 0 0 0"/>
            <CheckBox Content="Created"   IsChecked="{Binding Created}" Margin="16 0 0 0"/>
            <CheckBox Content="Conflict"  IsChecked="{Binding Conflict}" Margin="16 0 0 0"/>
            <CheckBox Content="Mixed"     IsChecked="{Binding Mixed}" Margin="16 0 0 0"/>
    </StackPanel>
</UserControl>
